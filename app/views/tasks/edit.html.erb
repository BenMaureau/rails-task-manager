<div class = "container">
  <h1> Edit Task </h1>

  <%= form_for (@task) do |f| %>
    <div class= 'form-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class= 'form-group'>
      <%= f.label :details %>
      <%= f.text_field :details %>
    </div>
    <div class= 'form-group'>
    <%= f.label :completed %>
    <%= f.text_field :completed %>
    </div>
     <%= f.submit 'Update', :class => 'btn btn-success' %>

    <div> <%= link_to "Back to list", tasks_path, class: 'btn btn-primary' %> </div>
  <% end %>
</div>
